# Boz Ripper Environment Configuration
# Copy this file to .env and fill in your values

# API Key (optional - for agent authentication)
BOZ_API_KEY=

# TheTVDB API Key (required for TV show metadata)
# Get your key from: https://thetvdb.com/dashboard/account/apikey
BOZ_THETVDB_API_KEY=your_thetvdb_api_key_here

# Extras Filtering Settings
BOZ_EXTRAS_MIN_DURATION_SECONDS=600  # 10 minutes
BOZ_EXTRAS_DURATION_VARIANCE=0.4     # 40%

# NAS Settings (optional - for file organization)
BOZ_NAS_ENABLED=false
BOZ_NAS_HOST=
BOZ_NAS_SHARE=
BOZ_NAS_USERNAME=
BOZ_NAS_PASSWORD=
BOZ_NAS_MOVIE_PATH=Movies
BOZ_NAS_TV_PATH=TV Shows

# Job Settings
BOZ_MAX_CONCURRENT_RIPS=2
BOZ_MAX_CONCURRENT_TRANSCODES=4
BOZ_DEFAULT_TRANSCODE_PRESET=Fast 1080p30
