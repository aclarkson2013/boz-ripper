# Boz Ripper Server Environment Configuration
# Copy this file to .env and customize

# Server settings
BOZ_DEBUG=false
BOZ_HOST=0.0.0.0
BOZ_PORT=8000

# API authentication (optional - leave blank to disable)
BOZ_API_KEY=

# NAS settings
BOZ_NAS_ENABLED=false
BOZ_NAS_HOST=192.168.1.100
BOZ_NAS_SHARE=media
BOZ_NAS_USERNAME=
BOZ_NAS_PASSWORD=
BOZ_NAS_MOVIE_PATH=Movies
BOZ_NAS_TV_PATH=TV Shows

# Job settings
BOZ_MAX_CONCURRENT_RIPS=2
BOZ_MAX_CONCURRENT_TRANSCODES=4
BOZ_DEFAULT_TRANSCODE_PRESET=Fast 1080p30

# Agent settings
BOZ_AGENT_TIMEOUT_SECONDS=120
BOZ_HEARTBEAT_INTERVAL=30

# TheTVDB API Key (for TV show metadata)
# Get your key from: https://thetvdb.com/dashboard/account/apikey
BOZ_THETVDB_API_KEY=

# OMDb API Key (for movie metadata)
# Get your key from: https://www.omdbapi.com/apikey.aspx
BOZ_OMDB_API_KEY=
